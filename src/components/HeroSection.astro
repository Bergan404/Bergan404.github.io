---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

import Button from "./extra/button.astro";

interface Props {
    imagePath: string | ImageMetadata;
	title: string;
	body: string;
}

const { imagePath, title, body } = Astro.props

const imagePathAwaiting = await getImage({
    src: imagePath,
    format: "png"
});

---

<header class="hero container">
    <picture>
        <img src={imagePathAwaiting.src} alt={title}  id="houseopen"/>
    </picture>
    <div class="overlay"></div>
    <div class="hero-content hero_text_shadow" data-aos="zoom-in" data-aos-easing="ease-out-back" data-aos-duration="2000" data-aos-delay="0">
        <h4 class="baskervville-regular">WHIDDON PROPERTY SOLUTIONS</h4>
        <h2 class="bold">{title}</h2>
        <p>{body}</p>
        <Button
            link="/"
            text="Work With Us"
        />
    </div>
</header>

<style>
	header {
		margin: auto;
		padding: 1rem;
		/* width: 800px; */
		/* max-width: calc(100% - 2rem); */
		color: white;
		font-size: 20px;
		line-height: 1.6;
		height: 100vh;
	}
	#houseopen {
		position: absolute;
		right: 0;
		bottom: 0;
		min-width: 100%;
		min-height: 100%;
        width: 100%;
        height: 100%;
	}
	.hero-content {
		display: grid;
		place-content: center;
		height: 100vh;
		width: 100%;
		z-index: 10;
		position: relative;
		text-align: center;
	}
	.home_content {
		background-size: cover;
	}
	.image_box img{
		width: 100%;
		height: 100%;
	}
</style>

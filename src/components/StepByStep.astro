---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

interface Props {
    imagePath: string | ImageMetadata;
	title: string;
	body: string;
}

const { imagePath, title, body } = Astro.props

const imagePathAwaiting = await getImage({
    src: imagePath,
    format: "png",
    width: 200,
    height: 200,
});

---

<div class="each_step row gap-4 align-items-center py-3">
	<div class="image_container col-2">
        <picture>
            <img src={imagePathAwaiting.src} alt={title} />
        </picture>
    </div>
    <div class="content_container col">
        <p class="bold">{title}</p>
        <p class="smaller">{body}</p>
    </div>
</div>
<style>
    .smaller {
        font-size: 1.2em;
    }
</style>

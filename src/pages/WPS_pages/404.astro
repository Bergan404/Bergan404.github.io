---
import Layout from '../../layouts/Layout_WPS.astro';

import KeyPoints from '../../components/KeyPoints.astro';

import StepByStep from '../../components/StepByStep.astro';
import ContactBox from '../../components/ContactBox.astro';
import HeroSection from '../../components/HeroSection.astro';
import ButtonBlack from '../../components/extra/button_black.astro';

import BrokenHome from "../../assets/images/WPS/WPS-Broken_home.svg?raw";
---

<Layout title="WPS - Permitting Solutions">
	<section class="text_content_background hero-content">
		<div class="container py-3">
            <div class="row">
                <div class="col-4">
                    <Fragment set:html={BrokenHome} />
                </div>
                <div class="col-8">
                    <h1 class="bold">404</h1>
			        <h3 class="bold">Page Not Found</h3>
                    <ButtonBlack
                        link="/"
                        text="Return Home"
                    />
                </div>
            </div>
		</div>
	</section>
</Layout>

<style>
	header {
		margin: auto;
		padding: 1rem;
		/* width: 800px; */
		/* max-width: calc(100% - 2rem); */
		color: white;
		font-size: 20px;
		line-height: 1.6;
		height: 100vh;
	}
	#houseopen {
		position: absolute;
		right: 0;
		bottom: 0;
		min-width: 100%;
		min-height: 100%;
        width: 100%;
        height: 100%;
	}
	.hero-content {
		display: grid;
		place-content: center;
		height: 100vh;
		width: 100%;
		z-index: 10;
		position: relative;
		text-align: center;
	}
	.home_content {
		background-size: cover;
	}
	.image_box img{
		width: 100%;
		height: 100%;
	}
</style>
